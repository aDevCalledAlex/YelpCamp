<% include ../partials/header %>

<header id="show" class="jumbotron">
    <h1><%= campground.name %></h1>
    <img src="<%= campground.image %>" alt="">
    <p><%= campground.description %></p>
    <a href="/campgrounds/<%= campground._id %>/comments/new"><button class="btn btn-primary">Comment</button></a>
    <a href="/campgrounds"><button class=" btn btn-danger">Back</button></a>
    <div id="commentSection">
      <h2>Comments:</h2>
      <ul>
        <% campground.comments.forEach( comment => { %>
          <li><strong><%= comment.author %></strong>: <span><%= comment.body %></span></li>
        <% }) %>
      </ul>
    </div>
</header>

<% include ../partials/footer %>